<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/home.css">

   

    <title>
        <%=title%>
    </title>
</head>

<body>
    <div class="container">
        <!-- App title -->
        <h1>TODO App</h1>
        <!-- Task Description -->
        <div class="desc">
            <p>DESCRIPTION</p>
            <input type="text" placeholder="What do you need to do?" id="task">
        </div>

        <!-- Category Selector -->
        <div class="category-date-div">
            <div class="category">
                <p>CATEGORY</p>
                <select name="category-selector" id="category-select">
                    <option value="">Choose a category</option>
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="College">College/School</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <!-- Due date picker -->
            <div class="due-date">
                <p>DUE DATE</p>
                <input type="date" id="date">
            </div>
        </div>

        <!-- Add and Delete task buttons -->
        <div class="add-delete-btns-div">
            <button class="add-btn"><span><i class="fa-solid fa-plus"></i></span>ADD TASK</button>
            <button class="delete-btn"><span><i class="fa-solid fa-trash-can"></i></span>DELETE TASK</button>
        </div>

        <!-- Total task on db -->
        <div class="total-tasks">Total tasks: <span id="total-tasks"></span></div>

        <!-- The list -->
        <div class="list-div">
            <ul class="lists">

                <% task_lists.forEach(tasks=>{%>
                    <!-- Individual task list -->
                    <li class="individual-task-li cat-<%=tasks.category%>-border">
                        <input type="checkbox" name="checkbox" data-id="<%=tasks._id%>">
                        <div class="task-due-date-div">
                            <p>
                                <%=tasks.desc%>
                            </p>
                            <p><span><i class="fa-solid fa-calendar-days"></i></span>
                                <%=tasks.due_date%>
                            </p>
                        </div>
                        <div class="individual-task-category cat-<%=tasks.category%>">
                            <p>
                                <%=tasks.category%>
                            </p>
                        </div>
                    </li>
                    <% }) %>

            </ul>
        </div>
    </div>


    <!-- Script Tags -->
    
     <!-- Fontawesome script -->
     <script src="https://kit.fontawesome.com/ba0ac440b4.js" crossorigin="anonymous"></script>
    <!-- JQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <!-- Custom js -->
    <script src="/js/home.js"></script>
</body>

</html>